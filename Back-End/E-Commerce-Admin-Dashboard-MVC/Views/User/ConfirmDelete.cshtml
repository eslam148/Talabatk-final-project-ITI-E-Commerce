

<div class="card mx-auto" style="width: 20rem; background-color:lightyellow">
    <div class="card-body">
        <h5 class="card-title"> Warning!!</h5>
        <p class="card-text">Are you sure you want to delete this user: <strong>@Model.First_Name</strong> </p>
        <a class="btn btn-danger" asp-action="DeleteUser" asp-controller="User" asp-route-id="@Model.Id">Yes</a>
        @if (Model.Role == "buyer")
        {
            <a class="btn btn-info" asp-action="GetBuyers" asp-controller="User">Cancel</a>
        }

        else
        {
            <a class="btn btn-info" asp-action="GetSellers" asp-controller="User">Cancel</a>
        }
       
    </div>
</div>




