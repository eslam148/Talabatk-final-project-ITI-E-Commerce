@model AdminRegistrationModel

<div class="row w-100 mx-0">
    <div class="col-lg-8 mx-auto">
        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
     
            <form class="pt-3" asp-controller="Admin" asp-action="Signup" method="post">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-group row">
                    <div class="col">
                        <input asp-for="FirstName" class="form-control form-control-md" id="exampleInputUsername1" placeholder="@SharedLocalizer["First Name"]">
                        <span asp-validation-for="FirstName" class="alert-danger"></span>

                        </div>
                    <div class="col">
                        <input asp-for="LastName" class="form-control form-control-md" id="exampleInputUsername1" placeholder="@SharedLocalizer["Last Name"]">
                        <span asp-validation-for="LastName" class="alert-danger"></span>

                    </div>
                </div>
              
                <div class="form-group">
                    <input asp-for="Email" class="form-control form-control-md" id="exampleInputUsername1" placeholder="@SharedLocalizer["Email"]">
                    <span asp-validation-for="Email" class="alert-danger"></span>

                </div>
                <div class="form-group">
                    <input asp-for="UserName" class="form-control form-control-md" id="exampleInputUsername1" placeholder="@SharedLocalizer["User Name"]">
                    <span asp-validation-for="UserName" class="alert-danger"></span>

                </div>
                <div class="form-group">
                    <input asp-for="PhoneNumber" class="form-control form-control-md" id="exampleInputUsername1" placeholder="@SharedLocalizer["Phone Number"]">
                    <span asp-validation-for="PhoneNumber" class="alert-danger"></span>

                </div>
                <div class="form-group">
                    <input asp-for="Password" class="form-control form-control-md" id="exampleInputUsername1" placeholder="@SharedLocalizer["Password"]">
                    <span asp-validation-for="Password" class="alert-danger"></span>

                </div>
                <div class="form-group">
                    <input asp-for="ConfirmPassword" class="form-control form-control-md" id="exampleInputUsername1" placeholder="@SharedLocalizer["Confirm Password"]">
                    <span asp-validation-for="ConfirmPassword" class="alert-danger"></span>
                </div>
                <div class="form-group">
                    <select class="form-control" asp-for="Role" asp-items="@ViewBag.Roles" form-control-lg" id="exampleFormControlSelect2">
                    </select>
                    <span asp-validation-for="Role" class="alert-danger"></span>

                </div>
              
                
                <div class="mt-3">
                    <button class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" type="submit">@SharedLocalizer["Register"]</button>
                </div>
               @* <div class="text-center mt-4 font-weight-light">
                    Already have an account? <a href="login.html" class="text-primary">Login</a>
                </div>*@
            </form>
        </div>
    </div>
</div>