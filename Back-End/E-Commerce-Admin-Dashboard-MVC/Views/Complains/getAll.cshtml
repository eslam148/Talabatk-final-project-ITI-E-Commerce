@model List<Complaints>
<table class="table table-striped">
    <thead>
      <tr>
        <th>Product Name</th>
        <th>Complain</th>
        <th>Status</th>
        <th>Seller Name</th>
        <th>Customer Name</th>
        <th>Complain Date</th>
        <th>Take Action</th>
      </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                
               <td>@item.Product.Name</td>
               @*<td>Not Avilable</td> *@
                 <td>@item.Noted</td>
                @if (item.Progress==0)
                {
                    <td>Unread</td>
                }
                else if(item.Progress==1)
                {
                    <td>Pending</td>
                }
                else{
                    <td>Solved</td>
                }
                
                <td>@item.Seller.First_Name   </td>
                <td>@item.Buyer.First_Name</td>
                <td>@item.Date</td>
                @if (item.Progress == 0)
                {
                    <td>
                        <a class="btn btn-danger" asp-action="Show" asp-controller="Complains" asp-route-id="@item.Id">Show</a>
                    </td>
                }
                else if (item.Progress == 1)
                {
                    <td>
                        <a class="btn btn-danger" asp-action="" asp-controller="Complains" asp-route-id="@item.Id">Replay</a>
                    </td>
                }
                else
                {
                    <td>No Action Needed</td>
                }
            </tr>

        }
    </tbody>
  </table>