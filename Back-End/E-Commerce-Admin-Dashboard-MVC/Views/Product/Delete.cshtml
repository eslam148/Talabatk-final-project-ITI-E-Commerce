@model ProductsVM;
@{
    ViewData["Title"] = "Delete";
}
<section style="background-color: #eee;" class="col-12">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-4">
                <div class="card text-black">
                    <i class="fab fa-apple fa-lg pt-3 pb-1 px-3"></i>
                    <img src="https://mdbcdn.b-cdn.net/img/Photos/Horizontal/E-commerce/Products/3.webp"
                         class="card-img-top" alt="Apple Computer" />
                    <div class="card-body">
                        <div class="text-center">
                            <h5 class="card-title">@Model.Name</h5>
                            <p class="text-muted mb-4">@Model.Description</p>
                        </div>
                        <div>
                            <div class="d-flex justify-content-between">
                                <span>@SharedLocalizer["price"]</span><span>@Model.Price</span>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span>@SharedLocalizer["Category"]</span><span>@Model.Category</span>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span>@SharedLocalizer["CreatedAt"]</span><span>@Model.created_at</span>
                            </div>
                        </div>
                        @if (Model.Discount != null)
                        {
                            <div class="d-flex justify-content-between total font-weight-bold mt-4">
                                <span>@SharedLocalizer["Discount"]</span><span>@Model.Discount</span>
                            </div>

                        }
                        <div class="d-flex justify-content-around total font-weight-bold mt-4">
                            <a asp-action="GetProductExisting" asp-controller="Product" class="btn btn-secondary">@SharedLocalizer["Cancel"]</a>

                            <a asp-action="ConfirmDelete" asp-controller="Product" asp-route-Id="@Model.No" class="btn btn-danger">@SharedLocalizer["Delete"]</a>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

