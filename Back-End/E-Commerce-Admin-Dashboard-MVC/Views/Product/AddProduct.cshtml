                    @*  <div class="col-md-6">
                        <div class="form-group row">
                          <label class="col-sm-3 col-form-label">Last Name</label>
                          <div class="col-sm-9">
                            <input type="text" class="form-control" />
                          </div>
                        </div>
                      </div>*@
                    </div>
                    <div class="row">
                      <div class="col-md-6">
                        <div class="form-group row">
                          <label class="col-sm-3 col-form-label">@SharedLocalizer["Category"]</label>
                          <div class="col-sm-9">
                            <select asp-for="subCategory" class="form-control">
                                  @foreach (var cat in ViewBag.Category)
                                    {
                                        <option value="@cat.Id">@cat.BrandName</option>
                                    }
                            </select>
                            <span asp-validation-for="subCategory"></span>

                          </div>
                        </div>
                      </div>
                     
                    </div>
                    <div class="row">
                         <div class="col-md-6">
                        <div class="form-group row">
                          <label class="col-sm-3 col-form-label">@SharedLocalizer["CreatedAt"]</label>
                          <div class="col-sm-9">
                            <input type="datetime" asp-for="created_at" class="form-control" placeholder="dd/mm/yyyy"/>
                            <span asp-validation-for="created_at"></span>
                          </div>
                        </div>
                      </div>
                    </div>
                     <div class="row">
                         <div class="col-md-6">
                        <div class="form-group row">
                          <label class="col-sm-3 col-form-label">@SharedLocalizer["ModefiedAt"]</label>
                          <div class="col-sm-9">
                            <input type="datetime" asp-for="modified_at" class="form-control" placeholder="dd/mm/yyyy"/>
                            <span asp-validation-for="modified_at"></span>
                          </div>
                        </div>
                      </div>
                    </div>

                   
                    <div class="row">
                      <div class="col-md-6">
                        <div class="form-group row">
                          <label class="col-sm-3 col-form-label"> @SharedLocalizer["Description"]</label>
                          <div class="col-sm-9">
                            <textarea asp-for="Description" type="text" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Description"></span>
                          </div>
                        </div>
                      </div>
                 
                    </div>
                    <div class="row">
                      <div class="col-md-6">
                        <div class="form-group row">
                          <label asp-for="Price" class="col-sm-3 col-form-label">@SharedLocalizer["price"]</label>
                          <div class="col-sm-9">
                            <input asp-for="Price" type="number" class="form-control" />
                            <span asp-validation-for="Price"></span>
                          </div>
                        </div>
                      </div>
                     
                    </div>
                    <div class="row">
                         <div class="col-md-6">
                        <div class="form-group row">
                          <label asp-for="Qauntity" class="col-sm-3 col-form-label">@SharedLocalizer["Quantity"]</label>
                          <div class="col-sm-9">
                            <input asp-for="Qauntity" type="number" class="form-control" />
                            <span asp-validation-for="Qauntity"></span>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-success">@SharedLocalizer["Add"]</button>
                    </div>
                  </form>
                </div>
              </div>
            </div>