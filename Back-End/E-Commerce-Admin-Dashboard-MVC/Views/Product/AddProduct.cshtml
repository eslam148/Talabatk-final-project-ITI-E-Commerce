                  <form data-ajax="true" enctype="multipart/form-data"  class="form-sample" method="post" asp-action="AddProduct" asp-controller="Product" >
                    <p class="card-description">
                      @SharedLocalizer["ProductInfo"]
                    </p>
                    <div class="row">
                      <div class="col-md-6">
                        <div class="form-group row">
                          <label class="col-sm-3 col-form-label">@SharedLocalizer["ProductName"]</label>
                          <div class="col-sm-9">
                            <input asp-for="Name" type="text" class="form-control" />
                             <span asp-validation-for="Name"></span>
                          </div>
                          
