@model DiscountModel
<div class="card">
    <div class="card-body">
        <form class="forms-sample" data-ajax="true" method="post" asp-controller="Discount" asp-action="Add" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="Name">@SharedLocalizer["Name"]</label>
                <input asp-for="Name" class="form-control" placeholder="Name">
                <span asp-validation-for="Name" class="alert-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="Disc_Percent">@SharedLocalizer["Discoun Percent"]</label>
                <input asp-for="Disc_Percent" class="form-control" placeholder="Discoun Percent">
                <span asp-validation-for="Disc_Percent" class="alert-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="Description">@SharedLocalizer["Description"]</label>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Description" class="alert-danger"></span>

            </div>
            <button type="submit" class="btn btn-primary mr-2">@SharedLocalizer["Submit"]</button>
            <button class="btn btn-light">@SharedLocalizer["Cancel"]</button>
        </form>
    </div>
</div>